# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=owner/repo

# Claude API Configuration (ONLY for emergencies - uses API credits!)
# Set USE_CLAUDE_API=true to enable API fallback
ANTHROPIC_API_KEY=your_anthropic_api_key_here
USE_CLAUDE_API=false

# Code Generation Configuration
# Uses CLI tools ONLY (no API credits consumed)
# Available commands: 'claude', 'copilot', 'gh copilot'
# Set to false to skip temporarily if rate-limited
# Fallback: Template generation (no AI) - always works
USE_CLAUDE_CLI=true
USE_COPILOT_CLI=true

# Note: Ensure you have authenticated:
#   gh auth login
#   claude login (if using claude CLI)

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Vercel Configuration (optional)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Application Settings
LOG_LEVEL=INFO
MAX_CONCURRENT_ISSUES=3

# Safety Settings
DRY_RUN=false  # Set to true to prevent actual changes
AUTO_MERGE=false  # Deprecated - use AUTO_MERGE_READY_PRS instead
MAX_RETRIES=1
REQUIRE_TESTS=true

# PR Management
AUTO_CREATE_PR=true  # Automatically create PRs after successful build
AUTO_CLEANUP_WORKTREE=false  # Cleanup worktree after PR creation
PR_LABELS=automated,orchestratorai  # Comma-separated labels for PRs

# PR Monitoring
PR_MONITORING_ENABLED=true  # Enable automated PR review monitoring
PERPLEXITY_TIMEOUT_MINUTES=10  # Max time to wait for Perplexity review
PR_POLL_INTERVAL_SECONDS=30  # How often to check for review updates
REQUIRE_HUMAN_APPROVAL=true  # Require at least one human approval before merge
REQUIRE_CI_PASS=true  # Require CI checks to pass before merge

# Autopilot Mode (DANGER: Full automation)
AUTOPILOT_MODE=false  # CAUTION: Enables auto-merge when all checks pass
AUTO_MERGE_READY_PRS=false  # Auto-merge PRs that are ready (less strict than AUTOPILOT_MODE)
